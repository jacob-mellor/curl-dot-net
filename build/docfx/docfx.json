{
  "$schema": "http://dotnet.github.io/docfx/schemas/v2/config.schema.json",
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/CurlDotNet/CurlDotNet.csproj"
          ],
          "src": "../.."
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "properties": {
        "TargetFramework": "net8.0"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "**.md",
          "**/**.md",
          "!_site/**"
        ],
        "src": "../../docs"
      },
      {
        "files": [
          "toc.yml",
          "index.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "favicon.ico"
        ],
        "src": "../../docs"
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "modern"
    ],
    "postProcessors": ["ExtractSearchIndex", "SitemapGenerator"],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false,
    "globalMetadata": {
      "_appName": "CurlDotNet",
      "_appTitle": "CurlDotNet - Pure .NET curl for C#",
      "_appFooter": "Copyright Â© 2024 CurlDotNet | <a href='https://www.nuget.org/packages/CurlDotNet/'>NuGet</a> | <a href='https://github.com/jacob-mellor/curl-dot-net'>GitHub</a>",
      "_appLogoPath": "logo.svg",
      "_appFaviconPath": "favicon.ico",
      "_enableSearch": true,
      "_gitContribute": {
        "repo": "https://github.com/jacob-mellor/curl-dot-net",
        "branch": "master",
        "path": "docs"
      }
    },
    "sitemap": {
      "baseUrl": "https://jacob-mellor.github.io/curl-dot-net",
      "priority": 0.5,
      "changefreq": "weekly",
      "fileOptions": {
        "**/getting-started/**": {
          "priority": 0.8,
          "changefreq": "weekly"
        },
        "**/tutorials/**": {
          "priority": 0.7,
          "changefreq": "weekly"
        },
        "**/api/**": {
          "priority": 0.6,
          "changefreq": "monthly"
        }
      }
    }
  }
}